

<div class="container">
  
  <div class="jumbotron">
  <p id="notice"><%= notice %></p>
  <h3>Albums</h3>

  <div class="input-group">

    <input type="text" class="form-control" placeholder="Search for user">
    <span class="input-group-btn">
      <button class="btn btn-default" type="button">Search</button>
    </span>
  </div><!-- /input-group -->

  <% if current_user %>

  <br>

      <div class="row">
      <% @albums.each do |album| %>

        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <!-- <img src="..." alt="..."> -->
            <div class="caption">
              <h3><td><%= album.name %></td></h3>
              <td><%= album.description %></td>
              <p>
                <!-- maybe use post form to submit id to songs controller-->
                <%= link_to 'View', songs_path(album), class: "btn btn-primary" %>

              </p>
            </div>
          </div>
        </div>

      <% end %>
      </div>


  <%= link_to 'New Album', new_album_path,class:"btn btn-default" %>

  <% else %>
  <h4> Login to add new album </h4>
  <% end %>
  </div>
</div>
