

<div class="container">
  
  <div class="jumbotron">
  <p id="notice"><%= notice %></p>


  <% if current_user %>

  <% if @album.empty? %>
  <h3> Favourites is currently empty, go into albums and favourite! </h3>
  <% else %>
  <h3>Favourites:</h3>
  <br>

      <div class="row">
      <% @album.each do |album| %>

        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <!-- <img src="..." alt="..."> -->
            <div class="caption">
              <h3><td><%= album.name %></td></h3>
              <td><%= album.description %></td>
              <p>
                <!-- maybe use post form to submit id to songs controller-->
                <%= link_to 'View', songs_path(album), class: "btn btn-primary" %>
                <%= link_to 'Remove', "/favourites/"+album.id.to_s, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>

              </p>
            </div>
          </div>
        </div>

      <% end %>
      </div>
  <% end %>


  <% else %>
  <h4> Login to view favourite albums </h4>
  <% end %>
  </div>
</div>
