

<div class="container">
  
  <div class="jumbotron">
  <p id="notice"><%= notice %></p>


  <% if current_user %>

  <% if @albums.empty? %>
  <h3>Albums is current empty, click on button below to add an album!</h3>

  <% else %>
  <h3>Albums:</h3>
  <br>

      <div class="row">
      <% @albums.each do |album| %>

        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <!-- <img src="..." alt="..."> -->
            <div class="caption">
              <h3><td><%= album.name %></td></h3>
              <td><%= album.description %></td>
              <p>
                <!-- maybe use post form to submit id to songs controller-->
                <%= link_to 'View', songs_path(album), class: "btn btn-primary" %> 
                <%= link_to 'Favourite', favourites_path(:album_id => album.id), method: :post, class:"btn btn-default" %>
                <%= link_to 'Edit', edit_album_path(album),class:"btn btn-default" %>
                <%= link_to 'Delete', album, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
              </p>
            </div>
          </div>
        </div>

      <% end %>
      </div>
  <% end %>


  <%= link_to 'New Album', new_album_path,class:"btn btn-default" %>

  <% else %>
  <h4> Login to add new album </h4>
  <% end %>
  </div>
</div>
