<div class="container">
  <div class="jumbotron">

    <h3> Contact </h3>


    <% if @contact.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this message from being sent:</h2>

        <ul>
        <% @contact.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="errorMessage" ><%= notice %></div>
    
    <%= simple_form_for @contact do |f|%>
      <span class="InputJQuery">
        <%= f.input :name %>
        <%= f.input :email %>
        <%= f.input :message %> 
      </span>
      <%= f.button :submit, 'Send message', class:"btn btn-default btn-light" %>
     
    <% end %>

    <%= link_to("Home", "/", class:"btn btn-default btn-light") %>
  </div>
</div>